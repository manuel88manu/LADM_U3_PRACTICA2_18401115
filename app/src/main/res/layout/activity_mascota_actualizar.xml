<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".MascotaActualizar">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="70dp"
        android:layout_marginBottom="20dp"
        android:text="DATOS DE PROPIETARIO"
        android:textSize="20dp"></TextView>

    <EditText
        android:id="@+id/txttelefono"
        android:layout_width="131dp"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:hint="telefono"></EditText>

    <EditText
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="edad"
        android:id="@+id/txtedadPropietario"></EditText>

    <EditText
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Curp"
        android:id="@+id/txtcurp"></EditText>

    <EditText
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="nombre de Propietario"
        android:id="@+id/txtnombrePropietario"></EditText>



    <TextView

        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="70dp"
        android:layout_marginVertical="20dp"
        android:text="DATOS DE MASCOTA"></TextView>

    <EditText
        android:id="@+id/etID"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:hint="ID"></EditText>

    <EditText
        android:id="@+id/etCurpPropietario"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:hint="Curp Propietario"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etNombre"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:hint="nombre"></EditText>

            <EditText
                android:id="@+id/etRaza"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:hint="Raza"></EditText>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="193dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="ACTUALIZAR"></Button>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btnRegresar"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:text="Regresar"></Button>

</LinearLayout>