<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".ui.slideshow.SlideshowFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Agregar Nueva MASCOTA"
        android:textSize="30dp"/>
    <EditText
        android:id="@+id/txtcurp"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:hint="Curp"></EditText>

    <EditText
        android:id="@+id/txtnombreMascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre Mascota"></EditText>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Raza Mascota"
        android:id="@+id/txtRaza"></EditText>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DueÃ±os"
            android:textAlignment="center"></TextView>

        <ListView
            android:id="@+id/listaPropietario"
            android:layout_width="match_parent"
            android:layout_height="70dp" />

    </LinearLayout>

    <Button
        android:id="@+id/insertarMascota"
        android:layout_width="163dp"
        android:layout_height="61dp"
        android:layout_gravity="center"

        android:text="INSERTAR"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Modificaciones Mascota"
        android:textSize="25dp"></TextView>

    <EditText
        android:id="@+id/etBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Busqueda por "></EditText>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radTodos"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="TODOS"/>
        <RadioButton
            android:id="@+id/radBuscarCurp"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="BUSCAR CURP"/>
        <RadioButton
            android:id="@+id/radBuscarNombre"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="BUSCAR NOMBRE"/>
        <RadioButton
            android:id="@+id/radBuscarRaza"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="BUSCAR RAZA"/>
    </RadioGroup>
    <ListView
        android:id="@+id/listaMascotas"
        android:layout_width="match_parent"
        android:layout_height="188dp" />


</LinearLayout>
